<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sadasdasd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_un"
    tools:context=".ActivityListdirectry" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/srch1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_menus"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="60" >

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imagegrid"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imagerefreash"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageCloud"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="9.72" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imagesearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/farme_lisView_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/srch1"
        android:layout_marginTop="20dp"
                android:layout_marginBottom="70dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grid_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/farme_lisView_search"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_menus"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <!-- blow focus  code dont change gridview items id during drag down and  go up again. -->

        <GridView
            android:id="@+id/gv_folders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:numColumns="1" >
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:weightSum="60" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageDelete"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <TextView
                    
                    android:id="@+id/textView_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Delete"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>
            
            
            

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageCopy"
                           android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c_copy" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_copy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Copy"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageMove"
                   android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c_move" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_move"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Move"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageRename"
                    android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
          />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rename"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageExit"
                          android:scaleType="fitXY"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Exit"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                                        android:layout_gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageMenu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
              android:layout_gravity="center"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="More"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cloud_or_menu_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp"
           android:layout_marginTop="80dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/menu_list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tpathL"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/srch1"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
   
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tpath"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>